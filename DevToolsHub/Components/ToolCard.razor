@using MudBlazor
<MudCard class="tool-card">
    <MudCardContent Style="padding: 8px 0;">
        <MudText Typo="Typo.h6" Color="Color.Primary">@Name</MudText>
        <MudText Typo="Typo.body2">@Description</MudText>
    </MudCardContent>
    <MudCardActions Style="padding: 0; display: flex; justify-content: center;">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnOpen">Open</MudButton>
    </MudCardActions>
</MudCard>

<style>
    .tool-card {
        background-color: var(--mud-palette-surface);
        padding: 12px;
        height: 100%;
        border-radius: 12px;
        border: 2px solid #4b4b4b; /* ✅ single fixed color */
        text-align: center;
    }
</style>

@code {
  
    [Parameter] public string Name { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public EventCallback OnOpen { get; set; }
}
